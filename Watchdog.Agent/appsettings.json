{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "C:\\Test\\Prometheus.Agents\\published\\logs\\\\all-.log",
          "rollingInterval": "Day",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "C:\\Test\\Prometheus.Agents\\published\\logs\\errors-.log",
          "restrictedToMinimumLevel": "Error",
          "rollingInterval": "Day",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "Properties": {
      "Application": "WatchdogAgent"
    }
  },
  "Watchdog": {
    "Name": "Watchdog Agent",
    "WatchList": [
      {
        "ProcessName": "PaymentTotem",
        "Decsription": "PaymentTotem runner",
        "ExePath": "C:\\Program Files\\Payment totem\\PaymentTotem.exe",
        "IsUIProcess": true,
        "CheckInterval": 1000,
        "CheckIntervalAfterException": 1000
      }
    ]
  }
}
